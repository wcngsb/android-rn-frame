<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="TitleText" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Switch" parent="android:Widget">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textOff">关</item>
        <item name="android:textOn">开</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:track">@android:color/holo_green_dark</item>
        <item name="android:switchMinWidth">120dp</item>
    </style>

    <style name="ItemLayout" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DesText" parent="android:TextAppearance">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="background">@android:color/holo_green_dark</item>
    </style>
    <style name="ConEditText" parent="android:TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
</resources>
